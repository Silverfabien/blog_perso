{% extends 'admin/base.html.twig' %}

{% block body %}
   <div class="admin-content">
      <div class="bg-admin-content">
         <h3>Information de la demande de <b>{{ contact.lastname }} {{ contact.firstname }}</b></h3>
         <hr>
         <p><b>Id</b>: {{ contact.id }}</p>
         <p><b>Nom et prénom</b>: {{ contact.lastname }} {{ contact.firstname }}</p>
         <p><b>Email</b>: {{ contact.email }}</p>
         <p><b>Créer le</b>: {{ contact.createdAt|localizeddate('none', 'none', null, null, 'dd MMMM Y à HH:mm') }}</p>
         <p><b>Valider</b>: {{ contact.confirm ? "Oui" : "Non" }}</p>
         <p><b>Catégorie</b>: {{ contact.category }}</p>
         <p><b>Sujet</b>: {{ contact.subject }}</p>
         <p><b>Contenu</b>: {{ contact.content|raw }}</p>
      </div>
   </div>
{% endblock %}

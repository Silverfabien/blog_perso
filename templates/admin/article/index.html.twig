{% extends 'admin/base.html.twig' %}

{% block body %}
    <div class="admin-content">
        <h3>Liste des articles</h3>
        <div class="table-responsive-xxl">
            <table class="table table-striped table-light table-bordered align-middle">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Écrit par</th>
                    <th>Titre</th>
                    <th>Créer le</th>
                    <th>Modifier le</th>
                    <th>Publier le</th>
                    <th>Vue</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody>
                {% for article in articles %}
                    <tr>
                        <td>{{ article.id }}</td>
                        <td>
                            <a href="{{ path('admin_user_show', {'id' : article.author.id}) }}">
                                {{ article.author.lastname }} {{ article.author.firstname }}
                            </a>
                        </td>
                        <td>
                            <a href="{{ path('admin_article_show', {'id' : article.id}) }}">{{ article.title }}</a>
                        </td>
                        <td>{{ article.createdAt|localizeddate('none', 'none', null, null, 'dd MMMM Y à HH:mm') }}</td>
                        <td>
                            {% if article.updatedAt %}
                                {{ article.updatedAt|localizeddate('none', 'none', null, null, 'dd MMMM Y à HH:mm') }}
                            {% else %}
                                null
                            {% endif %}
                        </td>
                        <td>
                            {% if article.publishedAt %}
                                {{ article.publishedAt|localizeddate('none', 'none', null, null, 'dd MMMM Y à HH:mm') }}
                            {% else %}
                                null
                            {% endif %}
                        </td>
                        <td>{{ article.see }}</td>
                        <td>
                            <a class="btn btn-info" href="{{ path('admin_article_edit', {'id' : article.id}) }}">
                                <i class="fas fa-pencil-alt"></i>
                            </a>
                            {{ include('admin/article/_remove_form.html.twig') }}
                            {% if article.publish %}
                                {{ include('admin/article/_unpublishing_form.html.twig') }}
                            {% else %}
                                {{ include('admin/article/_publishing_form.html.twig') }}
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

{% extends 'admin/base.html.twig' %}

{% block body %}
    <div class="admin-content">
        <h3>Liste des articles</h3>
        <div class="table-responsive-xxl">
            <table class="table table-striped table-light table-bordered align-middle">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Tag</th>
                    <th>Nombre d'utilisation</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody>
                {% for tag in tags %}
                    <tr>
                        <td>{{ tag.id }}</td>
                        <td>
                            <a href="{{ path('admin_tag_show', {'id' : tag.id}) }}">
                                {{ tag.name }}
                            </a>
                        </td>
                        <td>
                            {% set countTagInArticle = 0 %}
                            {% for article in tag.article %}
                                {% set countTagInArticle = countTagInArticle + 1 %}
                            {% endfor %}
                            {{ countTagInArticle }}
                        </td>
                        <td>
                            <a class="btn btn-info" href="{{ path('admin_tag_edit', {'id' : tag.id}) }}">
                                <i class="fas fa-pencil-alt"></i>
                            </a>
                            {{ include('admin/article/tags/_remove_form.html.twig') }}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}


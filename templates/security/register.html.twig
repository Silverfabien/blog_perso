{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
   <div class="banner">
      <div class="form-wrapper">
         <div class="container login-form">
            <form method="post">
               <h1 class="h3 mb-3 font-weight-normal">S'inscrire</h1>

               {{ form_start(form) }}
               {{ form_widget(form)}}
               <div class="pt-3 form-group">
                  <label>
                     <input type="checkbox" class="test" name="Acceptation des Mentions légales" required>
                     J'accepte et affirme avoir lu et compris les <a href="{{ path('mentions_legales') }}" target="_blank">Mentions légales</a> mises en place.
                  </label>
               </div>
               <button class="btn btn-primary mt-3">{{ button_label|default("S\inscrire") }}</button>
               {{ form_end(form) }}
            </form>
            <div class="text-center pt-2">
               Vous avez déjà un compte ?
               <a href="{{ path('app_login') }}">Se connecter</a>
            </div>
         </div>
      </div>
   </div>
{% endblock %}

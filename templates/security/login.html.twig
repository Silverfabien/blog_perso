{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
   <div class="banner">
      <div class="wrapper">
         <div class="container login-form">
            <form method="post">
               {% if error %}
                  <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
               {% endif %}

               <h1 class="h3 mb-3 font-weight-normal">Se connecter</h1>

               <label for="inputEmail">Votre email</label>
               <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>

               <label class="pt-3" for="inputPassword">Votre mot de passe</label>
               <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
               <a href="{{ path('forgot_password') }}">Vous avez oubli√© votre mot de passe ?</a>

               <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
               <div class="checkbox mb-3 pt-3">
                  <label class="form-check form-switch">
                     <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault" name="_remember_me">
                     <label class="form-check-label" for="flexSwitchCheckDefault">Se souvenir de moi</label>
                  </label>
               </div>

               <button class="btn btn-primary" type="submit">
                  Se connecter
               </button>
            </form>
            <div class="text-center pt-2">
               Vous n'avez pas de compte ?
               <a href="{{ path('app_register') }}">S'inscrire</a>
            </div>
         </div>
      </div>
   </div>
{% endblock %}

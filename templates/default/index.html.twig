{% extends 'base.html.twig' %}

{% block body %}
   <div class="banner">
      <div class="typed-block">
         <p>Je suis <span class="typed"></span></p>
      </div>
   </div>
   <section class="blog">
      <div class="container">
         <h2>Derniers articles postés</h2>
         <div class="row row-cols-1 row-cols-xl-3 g-4">
            {% for article in articles %}
               <div class="col">
                  <div class="card">
                     <div class="card-header">
                        <h3 class="card-title">
                           <a href="{{ path('article_show', {'slug' : article.slug}) }}">{{ article.title }}</a>
                        </h3>
                     </div>
                     <div class="card-body">
                        {{ article.description|raw }}
                     </div>
                     <div class="card-read-more">
                        <a class="btn btn-info index-article-button" href="{{ path('article_show', {'slug' : article.slug}) }}">
                           Lire la suite
                        </a>
                     </div>
                     <div class="card-footer">
                        Publié le {{ article.publishedAt|localizeddate('none', 'none', null, null, 'dd MMMM Y à HH:mm') }}
                     </div>
                  </div>
               </div>
            {% endfor %}
         </div>
      </div>
   </section>
{% endblock %}

{% block javascripts %}
   {{ encore_entry_script_tags('typed') }}
{% endblock %}
